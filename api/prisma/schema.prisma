generator client {
  provider = "prisma-client-js"
  
}


datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  age     String?

}

model Veiculos {
   id      String @id @default(auto()) @map("_id") @db.ObjectId
   marca   String?
   modelo  String?
   ano     String?
   cor     String?
   placa   String @unique


}